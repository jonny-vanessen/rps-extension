{
  "manifest_version": 3,
  "name": "PvP Rock Paper Scissors",
  "version": "1.0",
  "description": "Play Rock Paper Scissors with others in real-time.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  }
}
